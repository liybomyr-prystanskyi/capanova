{{#pricing-block}}
<div class="pricing-block">
  {{#span}}
  <div class="text-left mb-5 mb-lg-3">
    <span>{{{span}}}</span>
  </div>
  {{/span}}

  {{#description}}
  <p>{{{description}}}</p>
  {{/description}}

  <div class="pricing-block__sending flex-column">
    <div class="d-flex align-items-end">
      {{#price}}
      <h4>{{{price}}}</h4>
      {{/price}}
      {{#roominess}}
      <p>{{{roominess}}}</p>
      {{/roominess}}
    </div>

    <div class="price-description">
      {{#text-after-pricing}}
      <p>{{{text}}}</p>
      {{/text-after-pricing}}
    </div>

    <div class="mt-3">
      <div class="row align-items-center">
        <div class="col-8 col-sm-6">
          <div class="counter">
            <a href="#" class="counter__ctrl counter__ctrl--less">-</a>
            <input type="text" value="1">
            <a href="#" class="counter__ctrl counter__ctrl--more">+</a>
          </div>
        </div>
        <div class="col-12 col-sm-6 mt-4 mt-sm-0">
          {{#href}}
          <a href="#" class="btn btn--default-details mb-0 w-100">{{{href}}}</a>
          {{/href}}
        </div>
      </div>
    </div>
  </div>

</div>
{{/pricing-block}}