{{#baner-2}}
<section class="baner baner--2 {{#baner--2--margin-bottom-less}}baner--2--margin-bottom-less{{/baner--2--margin-bottom-less}}"
  style="background-image:url('{{{bg-image}}}');">
  <div class="container h-100">
    <div class="row h-100 justify-content-flex-start align-items-center">
      <div class="col-12 h-auto">

        <h2>
          {{#title1}}
          <span class="d-block">{{{title1}}}</span> <br>
          {{/title1}}
          {{#title3}}
          <span class="d-block text-left">{{{title2}}}
            <span class="green-title text-uppercase">{{{title3}}}</span>
          </span><br>
          {{/title3}}
          {{#title4}}
          <span class="d-block text-left">{{{title4}}}</span>
          {{/title4}}
        </h2>

        {{#href}}
        <a href="#" class="btn btn--default-details ">{{{href}}}</a>
        {{/href}}

      </div>

      {{#btn-down}}
      <a href="#" class="btn btn--down">
        <img src="img/btn-down.png" alt="down">
      </a>
      {{/btn-down}}

    </div>
  </div>
</section>
{{/baner-2}}